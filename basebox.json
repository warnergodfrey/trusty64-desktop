{
  "variables": {
    "output_directory": "output",
    "iso_url": "http://mirror.pnl.gov/releases/trusty/ubuntu-14.04.3-desktop-amd64.iso",
    "iso_checksum": "756a42474bc437f614caa09dbbc0808038d1a586d172894c113bb1c22b75d580",
    "iso_checksum_type": "sha256"
  },
  "builders": [ {
    "type": "virtualbox-iso",
    "name": "trusty64-desktop",
    "vm_name": "ubuntu",
    "guest_os_type": "Ubuntu_64",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "boot_command": [
      "<esc><esc><enter><wait>",
      "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
      "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
      "hostname={{ .Name }} <wait>",
      "fb=false debconf/frontend=noninteractive <wait>",
      "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
      "initrd=/install/initrd.gz -- <enter><wait>"
    ],
    "http_directory": "preseed",
    "guest_additions_path": "VBoxGuestAdditions.iso",
    "guest_additions_mode": "upload",
    "headless": false,
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
    "output_directory": "{{user `output_directory`}}"
  }],
  "provisioners": [ {
    "type": "shell",
    "script": "vagrant_sudo.sh",
    "execute_command": "echo 'vagrant' | sudo -E -S '{{ .Path }}'"
  },
  {
    "type": "shell",
    "script": "vagrant_keys.sh"
  },
  {
    "type": "shell",
    "script": "virtualbox_guest_additions.sh",
    "execute_command" : "echo 'vagrant' | sudo -E '{{ .Path }}'"
  }],
  "post-processors": [
  {
    "type": "atlas",
    "artifact": "warnergodfrey/trusty64-desktop",
    "artifact_type": "vagrant.box",
    "metadata": {
      "created_at": "{{timestamp}}",
      "provider": "virtualbox"
    }
  }]
}
